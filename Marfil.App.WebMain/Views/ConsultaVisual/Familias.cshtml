@model Marfil.Dom.Persistencia.Model.FicherosGenerales.ConsultaVisualFullModel
@using Newtonsoft.Json
@{}

<html>
<head>
    <link rel="stylesheet" href="@Url.Content("~/content/Estilos.css")">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <script src="@Url.Content("~/Scripts/ConsultaVisual/ConsultaVisual.js")"></script>
    <div ng-controller="FamiliasCtrl" ng-init="init('@Url.Content("~/Images/imagenesauxiliares/consultadefecto.png")','@Url.Action("GruposMateriales","ConsultaVisual")','@Url.Action("getFamilias","ConsultaVisual")')">
        <br /><br />
        <div class="container col-md-12 col-xs-12">
                <i>{{modelo.DescEmpresa }}</i>
                <i><strong>  >  </strong></i>
                <i>{{ modelo.DescAlmacen}}</i>
        </div>
        <br /><br />
        <div class="col-md-12 col-xs-12">
            <img src="~/Images/imagenesauxiliares/familias.jpg" style="height: 22px;float: left;margin-right: 10px;margin-top: 10px;border-radius:0px;">
            <p><font color="black" size="5">Familias</font></p>
        </div>
        <br /><br />
        <hr />
        <div class="input-container col-md-6 col-xs-6">
            <div class="wrapper">
                <input style="border:none;font-family:Arial, FontAwesome" class="effect-1" type="text" ng-model="searching" ng-change="searchAlmacen()" placeholder="&#xf002; Busca familias..." />
                <span class="focus-border"></span>
            </div>
        </div>
        <br /><br /><br />
        <div class="row">
            <!--Estilo Fila-->
            <div class="center">
                <!--centrado-->
                <div class="mi-configuracion col-md-4 col-xs-12" ng-repeat="item in familias | filter: searching: sensitiveCompare">
                    <!--Gruid son 12 columnas. Cada almacen va a ocupar 4-->
                    <a style="text-decoration:none" class="btn-group thumbnail" role="button" ng-click="seleccionar(item.Id, item.Descripcion)" />
                        <!--Cada almacen en una caja para que no se salga-->
                    <img ng-src="{{Getsrc('@(Url.Action("Thumbnail", "GestionDocumental"))/',item.Ficheros)}}" style="width:350px;height:300px;" />
                        <br />
                        <div class="center">
                            <h3><font size="5" color="#2079df">{{item.Descripcion}}</font></h3>
                        </div>
                        <hr />
                        <dl class="center">
                            <dt><font color="black">Identificador</font></dt>
                            <dd>{{item.Id}}</dd>
                            <dt><font color="black">Descripción abreviada</font></dt>
                            <dd>{{item.Descripcionabreviada}}</dd>
                        </dl>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<script type="text/javascript">
    var modelofamilias = @Html.Raw(JsonConvert.SerializeObject(Model));
</script>