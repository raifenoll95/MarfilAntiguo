@using Newtonsoft.Json
@model Marfil.Dom.Persistencia.Model.FicherosGenerales.ConsultaVisualFullModel
@{}

<html>
<head>
    <link rel="stylesheet" href="@Url.Content("~/content/Estilos.css")">
    <link rel="stylesheet" href="@Url.Content("~/content/font-awesome.css")">
    <link rel="stylesheet" href="@Url.Content("~/content/font-awesome.min.css")">
    <style>
    </style>
</head>

<body> 
    <script src="@Url.Content("~/Scripts/ConsultaVisual/ConsultaVisual.js")"></script>
    <div id="almacenes" ng-controller="AlmacenesCtrl" ng-init="init('@Url.Content("~/Images/imagenesauxiliares/consultadefecto.png")','@Url.Action("Familias","ConsultaVisual")', '@Url.Action("getAlmacenes","ConsultaVisual")')">
        <br /><br />
        <div class="container col-md-12 col-xs-12">
                <i>{{modelo.DescEmpresa}}</i>
        </div>  
        <br /><br />   
        <div class="col-md-12 col-xs-12">
            <img src="~/Images/almacenicon/warehouse.svg" style="height: 22px;float: left;margin-right: 10px;margin-top: 10px;border-radius:0px;">
            <p><font color="black" size="5">Almacenes</font></p>
        </div>
        <br /><br />
        <hr />
        <div class="input-container col-md-6 col-xs-6">
            <div class="wrapper">            
                <input style="border:none;font-family:Arial, FontAwesome" class="effect-1" type="text" ng-model="searching" ng-change="searchAlmacen()" placeholder="&#xf002; Busca almacenes..." />           
                <span class="focus-border"></span>
            </div>
        </div>
        <br /><br /><br />
        <div class="row">
            <!--Estilo Fila-->
            <div>
                <!--centrado-->
                <div class="mi-configuracion col-md-4 col-xs-12" ng-repeat="item in almacenes | filter: searching: sensitiveCompare">
                    <!--Gruid son 12 columnas. Cada almacen va a ocupar 4-->                
                    <a style="text-decoration:none" class="btn-group thumbnail" role="button" ng-click="seleccionar(item.Id,item.Descripcion)"/>
                        <!--Cada almacen en una caja para que no se salga-->
                        <img ng-src="{{Getsrc('@(Url.Action("Thumbnail", "GestionDocumental"))/',item.Ficheros)}}" style="width:350px;height:300px;" />
                        <br />
                        <div class="center">
                            <h3><font size="5" color="#2079df">{{item.Descripcion}}</font></h3>
                        </div>
                        <hr />
                        <dl class="center">                 
                            <dt><font color="black">Identificador</font></dt>
                                <dd>{{item.Id}}</dd>
                            <dt><font color="black">Coordenadas</font></dt>
                                <dd>{{item.Coordenadas}}</dd>
                            <dt><font color="black">Familias disponibles</font></dt>
                                <dd>{{item.numFamilias}}</dd>
                        </dl>
                    </a>
                </div>
            </div>
        </div>
        <br />
    </div>
</body>
</html>

<script type="text/javascript">
    var modeloalmacen = @Html.Raw(JsonConvert.SerializeObject(Model));
</script>



