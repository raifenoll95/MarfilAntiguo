<head>

    <link rel="stylesheet" href="@Url.Content("~/content/Estilos.css")">

    <style>

    </style>

</head>

<body>

    <div ng-controller="GrupoMaterialesCtrl" ng-init="init('@Url.Content("~/Images/imagenesauxiliares/consultadefecto.png")')">
        
        <br /><br />

        <div class="jumbotron">
            <div class="container">
                <h1>{{DescripcionFamilia}}</h1>
            </div>
        </div>

        <br /><br />
        
        <div class="row">
            <!--Estilo Fila-->
            <div class="center">
                <!--centrado-->
                <div class="mi-configuracion col-md-4 col-xs-12" ng-repeat="item in grupoMateriales">
                    <!--Gruid son 12 columnas. Cada almacen va a ocupar 4-->
                    <a onclick="ViewProd({{item.Id}})" class="btn-group thumbnail" role="button" > <!-- href="@Url.Action("ViewProductos")/{{item.Cod}}">-->
                        <!--Cada almacen en una caja para que no se salga-->
                        <div align="center" class="cajaTitulo">
                            {{item.Descripcion}}
                        </div>
                        <img width="400" height="300" alt="lote {{item.Id}}" ng-src="{{Getsrc('@(Url.Action("Thumbnail", "GestionDocumental"))/',item.Ficheros)}}"  />
                        <br />
                        <div align="center" class="cajaInformacion">
                            <p>ID de familia: {{item.Id}}</p>
                            <p>Descripción abreviada: {{item.Cod}}</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

