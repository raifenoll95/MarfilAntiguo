@using Marfil.Inf.ResourcesGlobalization.Textos.Entidades
@using Resources

<script src="@Url.Content("~/Scripts/UserControls/Calculadora/calculadoracontroller.js")"></script>
<div id="modalcalculadora" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="pull-right"><button type="button" class="close" data-dismiss="modal">×</button></span>
                <span class="fa-2x"><i class="fa fa-calculator"></i> Calculadora</span>
            </div>
            <div ng-controller="CaluladoraCtrl" class="modal-body" ng-init="inicio()">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-6">
                            <span class="control-label"></span>
                            
                        </div>
                        <div class="col-md-3">
                            <span class="control-label">@Albaranes.Metros</span>
                        </div>
                        <div class="col-md-3">
                            <span class="control-label">@General.LblCajas</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <input type="text" name="Entrada" id="Entrada" class="form-control" ng-model="Model.Entrada" decimalesnumerico />
                        </div>
                        <div class="col-md-3">
                            <input type="radio" name="Tipo" ng-model="Model.Tipo" value="0"/>
                        </div>
                        <div class="col-md-3">
                            <input type="radio" name="Tipo" ng-model="Model.Tipo" value="1"/>
                        </div>
                    </div>

                    <div class="form-group" ng-show="Model.Mostrarcantidad">
                        <div class="col-md-6">
                            <span class="control-label">@Albaranes.Cantidad</span>
                        </div>
                        <div class="col-md-6">
                            <span class="control-label" >{{Model.Cantidad}}</span>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-block btn-primary" ng-click="Aceptar()">Convertir en cantidad</button>    
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>