@using Marfil.Inf.ResourcesGlobalization.Textos.Entidades
@using Resources
<script src="@Url.Content("~/Scripts/UserControls/Ultimoprecio/UltimoprecioCtrl.js")"></script>
<div ng-controller="UltimoprecioCtrl">
    <div class="modal" id="ultimoprecio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" style="width: 90% !important">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">@General.LblBusquedas - {{Titulo}}</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <div>
                            <h4 ng-show="loading">@General.LblLoading</h4>

                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-2">@Clientes.Fkcuentas</label>
                                    <div class="col-md-10">
                                        <span>{{Cuenta}} - {{Cliente}}</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2">@Articulos.TituloEntidadSingular</label>
                                    <div class="col-md-10">
                                        <span>{{Articulo}} - {{Descripcion}}</span>
                                    </div>
                                </div>
                            </div>

                            <div id="tarifas">
                                <ul class="nav nav-tabs" data-tabs="tabs">
                                    <li class="active"><a data-toggle="tab" href="#especificas">@General.LblUltimosPrecios</a></li>
                                    <li><a data-toggle="tab" href="#sistema">@General.LblTarifasVentas</a></li>
                                    <li><a data-toggle="tab" href="#sistemacompra">@General.LblTarifasCompras</a></li>
                                </ul>
                            </div>
                            <div>
                                <div class="tab-content">
                                    <div id="especificas" class="tab-pane fade in active">
                                        <div ui-grid="gridOptions" ng-keydown="keydown" ui-grid-cellNav ui-grid-auto-resize ui-grid-selection class="grid"></div>
                                    </div>
                                    <div id="sistema" class="tab-pane fade in">
                                        <div ui-grid="gridSistema" ng-keydown="keydown" ui-grid-cellNav ui-grid-auto-resize ui-grid-selection class="grid"></div>
                                    </div>
                                    <div id="sistemacompra" class="tab-pane fade in">
                                        <div ui-grid="gridSistemaCompra" ng-keydown="keydown" ui-grid-cellNav ui-grid-auto-resize ui-grid-selection class="grid"></div>
                                    </div>
                                </div>


                                <div class="modal-footer">
                                    <button type="button" ng-click="cancelar()" id="btnAceptarultimoprecio" class="btn btn-ar btn-default">@General.LblCancelar</button>
                                    <button type="button" ng-click="aceptar()" id="btnCancelarultimoprecio" class="btn btn-ar btn-primary" data-dismiss="modal" ng-disabled="selected==null && selectedsistema==null && selectedsistemacompra==null">@General.LblAceptar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>













