    var listincoterm = WebHelper.GetApplicationHelper().GetListIncoterm().Select(f => new SelectListItem() { Value = f.Valor, Text = f.Descripcion }).ToList();
    listincoterm.Insert(0, new SelectListItem() {Value="",Text=""});
