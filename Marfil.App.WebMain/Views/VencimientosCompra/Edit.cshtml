@using Marfil.Dom.Persistencia.Model.Interfaces
@using Marfil.Dom.Persistencia.Model.Documentos.CobrosYPagos
@using Resources
@model IModelView
@{
    var toolbarModel = Model as IToolbar;
    toolbarModel.Toolbar.Titulo = "Previsión de pagos";
    ViewBag.Title = toolbarModel.Toolbar.Titulo;
}

@using (Html.BeginForm("EditOperacion", "VencimientosCompra", FormMethod.Post, new { @class = "form-horizontal" , @id="mainform"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @{
            ViewData["operacion"] = "Edit";
        }
        @Html.Partial("_vencimientos", Model as VencimientosModel)

        <div class="margin-top">
            <button class="btn btn-info no-margin-left" type="Submit" ng-disabled="!MainFormIsEnable">
                <i class="ace-icon fa fa-check bigger-110"></i>
                @General.BtnGuardar
            </button>
        </div>
    </div>
}

@section GridView
{
    @Html.DevExpress().GetStyleSheets(
    new StyleSheet { ExtensionSuite = ExtensionSuite.GridView }
)
    @Html.DevExpress().GetScripts(
    new Script { ExtensionSuite = ExtensionSuite.GridView }
)

}

