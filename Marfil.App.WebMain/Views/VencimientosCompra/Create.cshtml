@using Marfil.Dom.Persistencia.Model.Interfaces
@using Marfil.Dom.Persistencia.Model.Documentos.CobrosYPagos
@using Resources
@model IModelView
@{
    var toolbarModel = Model as IToolbar;
    toolbarModel.Toolbar.Titulo = "Previsión de pagos";
    ViewBag.Title = toolbarModel.Toolbar.Titulo;
}

@using (Html.BeginForm("CreateOperacion", "VencimientosCompra", FormMethod.Post, new { @class = "form-horizontal" , @id="mainform"}))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="mantenimiento" value="@ViewBag.Mantenimiento" />
    <div class="form-horizontal">       

       @Html.Partial("_vencimientos", Model as VencimientosModel)

        <div class="form-group">
            <div class="col-md-10 margin-top">
                <button class="btn btn-info" type="Submit" ng-disabled="!MainFormIsEnable">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    @General.LblCrear
                </button>
            </div>
        </div>
    </div>
}
