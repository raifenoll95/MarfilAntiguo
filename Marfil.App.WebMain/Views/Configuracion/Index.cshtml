                            @Html.Partial("_facturascompras", Model)
                        </div>
                        <div id="transformaciones" class="tab-pane fade margin-bottom">
                            @Html.Partial("_transformaciones", Model)
                        </div>
                        <div id="crm" class="tab-pane fade margin-bottom">
                            @Html.Partial("_crm", Model)
                        </div>
                    </div>
                </div>
                


                <div class="form-group">
                    <div class="col-md-10 margin-top">

                        <button class="btn btn-info" type="Submit" ng-disabled="!MainFormIsEnable">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            @General.BtnGuardar
                        </button>
                    </div>
                </div>
            </div>


                                }
    </div>
