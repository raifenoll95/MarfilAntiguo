@using System.Web.Mvc.Html
@using Marfil.Dom.Persistencia.Model.Interfaces
@using Marfil.Inf.Genericos.Helper
@model Marfil.Dom.Persistencia.Model.Stock.LotesModel


<script src="@Url.Content("~/components/bootbox.js/bootbox.min.js")"></script>
<div class="form-group">

    <div class="col-md-12">

        <h1> Añadir imagen a lote</h1>
        <br />

        @using (Html.BeginForm("Imagenes", "Lotes", new { LotesModel = Model }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.LabelFor(f => Model.Lote, new { @class = "control-label col-md-4", @style = "text-align: right" })
            @Html.TextBoxFor(f => Model.Lote)
            <br />
            <br />
            <label class="control-label col-md-4" align="right"></label>
            <input type="submit" value="Buscar lote" class="btn btn-default" />
        }
        <br />

        @if (Model.Fkarticulos != null)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="bolder center" style="min-width:120px">Cod. Artículo</th>
                        <th class="bolder center" style="min-width:120px">Descripción</th>
                        <th class="bolder center" style="min-width:120px">Largo (m)</th>
                        <th class="bolder center" style="min-width:120px">Ancho (m)</th>
                        <th class="bolder center" style="min-width:120px">Grueso (m)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="center">@Model.Fkarticulos</td>
                        <td class="center">@Model.Descripcion</td>
                        <td class="center">@Model.LargoProduccion</td>
                        <td class="center">@Model.AnchoProduccion</td>
                        <td class="center">@Model.GruesoProduccion</td>
                    </tr>
                </tbody>
            </table>
        }

        <div id="galeria">
            @Html.Partial("_galeriaimagenes", Model.Galeria)
        </div>


    </div>
</div>

<script>
    $.validator.setDefaults({ ignore: null });
</script>
