@using System.Web.Mvc.Html
@using Marfil.Dom.Persistencia.Model.Interfaces
@using Marfil.Inf.Genericos.Helper
@model Marfil.Dom.Persistencia.Model.Stock.LotesModel
@{
    var isreadonly = ViewData["readonly"] != null ? (bool)ViewData["readonly"] : false;
}
<div class="form-group">

<div class="col-md-12">
    @if (Model.Documentosrelacionados.Any())
    {
        <table  class="table  table-bordered table-hover">
            <thead>
            <tr>
                <th id="tipodocumento" role="columnheader">Tipo documento</th>
                <th id="referencia" role="columnheader">Referencia</th>
                <th id="accion" role="columnheader">#</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Documentosrelacionados)
            {
                <tr>
                    <td headers="tipodocumento">@(item.Tipodocumento.HasValue? Funciones.GetEnumByStringValueAttribute(item.Tipodocumento) :string.Empty)</td>
                    <td headers="referencia">@item.Referencia</td>
                    <td headers="accion"></td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        
            <h4>No existen documentos asociados</h4>
        
    }

</div>
    </div>
