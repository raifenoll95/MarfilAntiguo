@using Marfil.App.WebMain.Misc
@using Marfil.Dom.Persistencia.Model.Interfaces
@using Marfil.Dom.Persistencia.Model;
@using Marfil.Dom.Persistencia.Model.Configuracion.Cuentas
@using Marfil.Dom.Persistencia.Model.Documentos.Albaranes
@using Marfil.Dom.Persistencia.Model.Documentos.Pedidos
@using Marfil.Dom.Persistencia.ServicesView.Servicios.Campoverificacion
@using Marfil.Inf.ResourcesGlobalization.Textos.Entidades
@using Resources
@model Marfil.Dom.Persistencia.Model.Documentos.PedidosCompras.AsistentePedidosComprasModel
@{
    
    var campoverificacion = FCampoverificacion.Instance.GetModel<CuentasModel>(WebHelper.ContextService);
    var cvalbaranes = FCampoverificacion.Instance.GetModel<PedidosModel>(WebHelper.ContextService);
}


<form class="form-horizontal" id="step1-form">
    <div class="form-group">
        @Html.LabelFor(f => Model.Fkclientes, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                campoverificacion.Name = "Fkclientes";
                campoverificacion.Url = Url.Action("CuentasTiposClientesExclusiveFacturacionApi", "Api");
                campoverificacion.Valor = Model.Fkclientes;
                campoverificacion.CampoIdentificador = "Fkcuentas";
                campoverificacion.Titulo = Clientes.TituloEntidadSingular;
                campoverificacion.Obligatorio = true;
            }
            @Html.Partial("CampoverificacionUI", campoverificacion)
        </div>
        <div class="col-md-10 col-md-offset-2" style="text-align: left !important;">
            @Html.ValidationMessageFor(f => Model.Fkclientes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(f => Model.Fkpedidoinicio, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                cvalbaranes.Name = "Fkpedidoinicio";
                cvalbaranes.Url = Url.Action("PedidosParaImportarApi", "Api");
                cvalbaranes.Valor = Model.Fkpedidoinicio;
                cvalbaranes.CampoIdentificador = "Referencia";
                cvalbaranes.Configuracion.OcultarTexto = true;
                cvalbaranes.Titulo = Pedidos.TituloEntidadSingular;
                cvalbaranes.ControlesAsociados = "[ { \"cliente\":\"Fkclientes\" } ]";
                cvalbaranes.Obligatorio = false;
            }
            @Html.Partial("CampoverificacionUI", cvalbaranes)
        </div>
        <div class="col-md-10 col-md-offset-2">
            @Html.ValidationMessageFor(f => Model.Fkpedidoinicio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(f => Model.Fkpedidofin, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                cvalbaranes.Name = "Fkpedidofin";
                cvalbaranes.Url = Url.Action("PedidosParaImportarApi", "Api");
                cvalbaranes.Valor = Model.Fkpedidofin;
                cvalbaranes.CampoIdentificador = "Referencia";
                cvalbaranes.Configuracion.OcultarTexto = true;
                cvalbaranes.Titulo = Pedidos.TituloEntidadSingular;
                cvalbaranes.ControlesAsociados = "[ { \"cliente\":\"Fkclientes\" } ]";
                cvalbaranes.Obligatorio = false;
            }
            @Html.Partial("CampoverificacionUI", cvalbaranes)
        </div>
        <div class="col-md-10 col-md-offset-2">
            @Html.ValidationMessageFor(f => Model.Fkpedidofin, "", new { @class = "text-danger" })
        </div>
    </div>
</form>