@using System.Web.Optimization
@model Marfil.Dom.ControlsUI.Busquedas.BusquedasModel


<div id="@Html.Raw("id"+ Model.Nombre)" >
    <div ng-controller="BusquedasCtrl">
        <div class="modal" id="@Html.Raw(@Model.Nombre)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">Búsquedas - @Model.Titulo</h4>
                    </div>
                    <div class="modal-body">
                        <div id="@Model.Nombre">
                            <div>
                                <input type="hidden" name="@Model.Nombre" />
                                <h4 ng-show="loading">Loading...</h4>
                                <div ui-grid="gridOptions" ui-grid-auto-resize ui-grid-selection class="grid"></div>

                                <div class="modal-footer">
                                    <button type="button" ng-click="cancelar()" id="@Html.Raw("btnAceptar"+Model.Nombre)" class="btn btn-ar btn-default">Cancelar</button>
                                    <button type="button" ng-click="aceptar()" id="@Html.Raw("btnCancelar"+Model.Nombre)" class="btn btn-ar btn-primary" data-dismiss="modal" ng-disabled="selected==null">Aceptar</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>









